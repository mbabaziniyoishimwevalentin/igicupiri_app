    <script>
        function downloadPDF() {
            // Create a new URL with download parameter
            const currentUrl = new URL(window.location);
            currentUrl.searchParams.set('download', '1');
            
            // Create a temporary link and trigger download
            const link = document.createElement('a');
            link.href = currentUrl.toString();
            link.download = 'Transaction_History_Report_2025-08-27_17-26-02.pdf';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        function printReport() {
            window.print();
        }
        
        function saveAsImage() {
            // Use html2canvas library if available, otherwise fallback to print
            if (typeof html2canvas !== 'undefined') {
                html2canvas(document.body, {
                    height: window.innerHeight,
                    width: window.innerWidth,
                    useCORS: true,
                    scale: 2
                }).then(function(canvas) {
                    // Create download link for image
                    const link = document.createElement('a');
                    link.download = 'Transaction_History_Report_2025-08-27_17-26-02.png';
                    link.href = canvas.toDataURL('image/png');
                    link.click();
                });
            } else {
                // Fallback: Load html2canvas from CDN and try again
                const script = document.createElement('script');
                script.src = 'https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js';
                script.onload = function() {
                    html2canvas(document.body, {
                        height: window.innerHeight,
